    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.id %>
        </td>
        <td>
          <%= post.date %>
        </td>
        <td>
          <%= post.user.full_name %>
        </td>
        <td>
          <%= truncate(post.rationale) %>
        </td>
        <td>
          <span class="label label-info" ><%= post.overtime_request %></span>
        </td>
        <td>
          <%= status_label post.status %>
        </td>
        
        <td>
          <td>
            <td>
                <%= link_to 'Edit', edit_post_path(post)  if policy(post).update? %>
            </td>
            <td>
              <%= link_to 'Delete', post_path(post), method: :delete  , data: {confirm: 'are you sure ?' } if policy(post).update?%>
            </td>
          </td>
        </td>
      </tr>
      <% end %>
    