<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "App Alert", sticky: false , time: 2000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "App Error", sticky: false , time: 2000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "App Notification", sticky: false , time: 2000) %>
<% end %>